<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/success"
            android:contentDescription="Success Image"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Thank You -->
        <TextView
            android:id="@+id/tvThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for your order!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ff9800"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Order Number -->
        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order #: 12345"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Delivery Fee -->
        <TextView
            android:id="@+id/tvDeliveryFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Fee: 0.00"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Discount -->
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount: Rs.0.00"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Total Payment -->
        <TextView
            android:id="@+id/tvTotalPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: Rs.0.00"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Back to Home Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/login_button"
            android:text="Back to Home"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
